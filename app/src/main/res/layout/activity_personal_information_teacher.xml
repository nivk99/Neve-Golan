<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personalInformation.Personal_Information_teacher"
    android:background="@drawable/background_main">

    <TextView
        android:id="@+id/textView_id_teacher"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:background="#BAB2B2"
        android:text="תעודת זהות"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_age_teacher"
        app:layout_constraintEnd_toEndOf="@+id/textView_age_teacher"
        app:layout_constraintStart_toStartOf="@+id/textView_age_teacher" />

    <TextView
        android:id="@+id/textView_last_name_teacher"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:background="#BAB2B2"
        android:text="משפחה"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_id_teacher"
        app:layout_constraintEnd_toEndOf="@+id/textView_id_teacher"
        app:layout_constraintStart_toStartOf="@+id/textView_id_teacher" />

    <TextView
        android:id="@+id/textView_name_teacher"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:background="#BAB2B2"
        android:text="שם"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_last_name_teacher"
        app:layout_constraintEnd_toEndOf="@+id/textView_last_name_teacher"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_last_name_teacher" />

    <TextView
        android:id="@+id/textView_profession_teacher"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="64dp"
        android:background="#BAB2B2"
        android:text="מקצוע"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_email_teacher"
        android:layout_width="203dp"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:background="#BAB2B2"
        android:text="מייל"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_profession_teacher"
        app:layout_constraintEnd_toEndOf="@+id/textView_profession_teacher"
        app:layout_constraintStart_toStartOf="@+id/textView_profession_teacher" />

    <TextView
        android:id="@+id/textView_phone_teacher"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:background="#BAB2B2"
        android:text="טלפון"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_email_teacher"
        app:layout_constraintEnd_toEndOf="@+id/textView_email_teacher"
        app:layout_constraintStart_toStartOf="@+id/textView_email_teacher" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="184dp"
        android:layout_height="149dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_assignment_ind_24"
        app:layout_constraintBottom_toTopOf="@+id/textView_name_teacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_age_teacher"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:background="#BAB2B2"
        android:text="גיל"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_phone_teacher"
        app:layout_constraintEnd_toEndOf="@+id/textView_phone_teacher"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_phone_teacher" />

</androidx.constraintlayout.widget.ConstraintLayout>